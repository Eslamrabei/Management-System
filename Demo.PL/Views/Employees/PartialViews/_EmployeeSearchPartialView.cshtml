@model IEnumerable<EmployeesDto>

<div class="table-container animate-fade-in">
    <div class="table-responsive">
        <table id="EmployeesTable" class="table table-hover align-middle mb-0">
            <thead class="table-header">
                <tr>
                    <th class="employee-col">Employee</th>
                    <th class="contact-col">Contact</th>
                    <th class="type-col">Type</th>
                    <th class="department-col">Department</th>
                    <th class="salary-col">Salary</th>
                    <th class="status-col">Status</th>
                    <th class="actions-col text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr class="employee-row animate-slide-up" data-employee-id="@employee.Id">
                        <td>
                            <div class="employee-info">
                                <div class="employee-avatar">
                                    <img src="~/Files/Images/@(employee.ImageName ?? "user.png")"
                                         class="avatar-img"
                                         alt="@employee.Name" />
                                    @if (employee.IsActive)
                                    {
                                        <span class="status-indicator bg-success"></span>
                                    }
                                </div>
                                <div class="employee-details">
                                    <h6 class="employee-name">@employee.Name</h6>
                                    <div class="employee-meta">
                                        <span class="age-badge">@employee.Age yrs</span>
                                        <span class="gender-badge">@employee.Gender</span>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="contact-info">
                                <div class="email-text">@employee.Email</div>
                            </div>
                        </td>
                        <td>
                            <span class="type-badge">@employee.EmployeeType</span>
                        </td>
                        <td>
                            <span class="department-tag">@(employee.Department ?? "No Dept")</span>
                        </td>
                        <td>
                            <div class="salary-display">
                                <span class="salary-amount">@employee.Salary.ToString("C")</span>
                                <small class="salary-period text-muted">/year</small>
                            </div>
                        </td>
                        <td>
                            <div class="status-container">
                                <span class="status-badge @(employee.IsActive ? "status-active" : "status-inactive")">
                                    <span class="status-dot"></span>
                                    @(employee.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <!-- View Details -->
                                <a asp-action="Details" asp-route-id="@employee.Id"
                                   class="btn btn-action btn-view"
                                   data-bs-toggle="tooltip"
                                   title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <!-- Edit -->
                                <a asp-action="Edit" asp-route-id="@employee.Id"
                                   class="btn btn-action btn-edit"
                                   data-bs-toggle="tooltip"
                                   title="Edit Employee">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <!-- Delete -->
                                <button type="button"
                                        class="btn btn-action btn-delete"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal-@employee.Id"
                                        data-bs-tooltip="tooltip"
                                        title="Delete Employee">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <!-- Enhanced Delete Modal -->
                    <div class="modal fade" id="deleteModal-@employee.Id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content modal-glass">
                                <div class="modal-header">
                                    <div class="modal-icon bg-danger bg-opacity-10">
                                        <i class="bi bi-exclamation-triangle text-danger"></i>
                                    </div>
                                    <h5 class="modal-title ms-2">Confirm Deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="delete-confirmation">
                                        <div class="employee-preview">
                                            <img src="~/Files/Images/@(employee.ImageName ?? "user.png")"
                                                 class="preview-avatar"
                                                 alt="@employee.Name" />
                                            <div class="preview-info">
                                                <h6 class="preview-name">@employee.Name</h6>
                                                <p class="preview-details text-muted">
                                                    @employee.Email • @employee.EmployeeType
                                                </p>
                                            </div>
                                        </div>
                                        <div class="delete-warning">
                                            <i class="bi bi-exclamation-circle text-danger me-2"></i>
                                            <span class="warning-text">
                                                This action cannot be undone. All employee data will be permanently removed from the system.
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                    </button>
                                    <form method="post" asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.Id">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash me-1"></i>Delete Employee
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-people"></i>
            </div>
            <h4 class="empty-state-title">No Employees Found</h4>
            <p class="empty-state-description">
                There are no employees matching your current search criteria.
            </p>
            <button class="btn btn-primary" onclick="clearSearch()">
                <i class="bi bi-arrow-clockwise me-2"></i>Clear Search
            </button>
        </div>
    }
</div>

<style>
    /* Table Container */
    .table-container {
        background: var(--color-white);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-sm);
        overflow: hidden;
    }

    [data-theme="dark"] .table-container {
        background: var(--color-gray-800);
    }

    /* Table Header */
    .table-header {
        background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
        border: none;
    }

        .table-header th {
            border: none;
            padding: var(--space-lg);
            font-weight: var(--font-semibold);
            font-size: var(--text-sm);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--color-white);
        }

    /* Employee Row */
    .employee-row {
        transition: all var(--transition-base);
        border-bottom: 1px solid var(--color-gray-200);
    }

    [data-theme="dark"] .employee-row {
        border-bottom-color: var(--color-gray-700);
    }

    .employee-row:hover {
        background: rgba(102, 126, 234, 0.04);
        transform: translateX(4px);
    }

    .employee-row:last-child {
        border-bottom: none;
    }

    .employee-row td {
        padding: var(--space-lg);
        vertical-align: middle;
        border: none;
    }

    /* Employee Info */
    .employee-info {
        display: flex;
        align-items: center;
        gap: var(--space-md);
    }

    .employee-avatar {
        position: relative;
        width: 50px;
        height: 50px;
        flex-shrink: 0;
    }

    .avatar-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: var(--radius-full);
        border: 2px solid var(--color-gray-200);
    }

    .status-indicator {
        position: absolute;
        bottom: 2px;
        right: 2px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid var(--color-white);
    }

    .employee-details {
        min-width: 0;
    }

    .employee-name {
        font-weight: var(--font-semibold);
        color: var(--color-gray-800);
        margin-bottom: var(--space-xs);
        font-size: var(--text-sm);
        line-height: 1.2;
    }

    [data-theme="dark"] .employee-name {
        color: var(--color-gray-200);
    }

    .employee-meta {
        display: flex;
        gap: var(--space-sm);
        flex-wrap: wrap;
    }

    .age-badge, .gender-badge {
        padding: 0.125rem 0.5rem;
        border-radius: var(--radius-full);
        font-size: var(--text-xs);
        font-weight: var(--font-medium);
    }

    .age-badge {
        background: rgba(59, 130, 246, 0.1);
        color: var(--color-info);
    }

    .gender-badge {
        background: rgba(139, 92, 246, 0.1);
        color: var(--color-purple);
    }

    /* Contact Info */
    .contact-info {
        min-width: 200px;
    }

    .email-text {
        font-weight: var(--font-medium);
        color: var(--color-gray-700);
        font-size: var(--text-sm);
        margin-bottom: var(--space-xs);
    }

    [data-theme="dark"] .email-text {
        color: var(--color-gray-300);
    }

    .phone-text {
        font-size: var(--text-xs);
    }

    /* Badges and Tags */
    .type-badge {
        background: rgba(16, 185, 129, 0.1);
        color: var(--color-success);
        padding: 0.375rem 0.75rem;
        border-radius: var(--radius-full);
        font-size: var(--text-xs);
        font-weight: var(--font-medium);
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .department-tag {
        background: rgba(102, 126, 234, 0.1);
        color: var(--color-primary);
        padding: 0.375rem 0.75rem;
        border-radius: var(--radius-full);
        font-size: var(--text-xs);
        font-weight: var(--font-medium);
        border: 1px solid rgba(102, 126, 234, 0.2);
    }

    /* Salary Display */
    .salary-display {
        text-align: center;
    }

    .salary-amount {
        font-weight: var(--font-bold);
        color: var(--color-success);
        font-size: var(--text-sm);
    }

    .salary-period {
        font-size: var(--text-xs);
    }

    /* Status */
    .status-container {
        display: flex;
        justify-content: center;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: var(--space-sm);
        padding: 0.5rem 0.75rem;
        border-radius: var(--radius-full);
        font-size: var(--text-xs);
        font-weight: var(--font-semibold);
        transition: all var(--transition-base);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.1);
        color: var(--color-success);
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

        .status-active .status-dot {
            background: var(--color-success);
        }

    .status-inactive {
        background: rgba(239, 68, 68, 0.1);
        color: var(--color-danger);
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

        .status-inactive .status-dot {
            background: var(--color-danger);
        }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: var(--space-sm);
        justify-content: center;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-lg);
        border: 1px solid transparent;
        transition: all var(--transition-base);
        font-size: var(--text-sm);
    }

    .btn-view {
        color: var(--color-info);
        border-color: var(--color-info);
        background: transparent;
    }

        .btn-view:hover {
            background: var(--color-info);
            color: white;
            transform: translateY(-2px);
        }

    .btn-edit {
        color: var(--color-warning);
        border-color: var(--color-warning);
        background: transparent;
    }

        .btn-edit:hover {
            background: var(--color-warning);
            color: white;
            transform: translateY(-2px);
        }

    .btn-delete {
        color: var(--color-danger);
        border-color: var(--color-danger);
        background: transparent;
    }

        .btn-delete:hover {
            background: var(--color-danger);
            color: white;
            transform: translateY(-2px);
        }

    /* Delete Modal */
    .delete-confirmation {
        text-align: center;
    }

    .employee-preview {
        display: flex;
        align-items: center;
        gap: var(--space-md);
        margin-bottom: var(--space-lg);
        padding: var(--space-md);
        background: var(--color-gray-50);
        border-radius: var(--radius-lg);
    }

    [data-theme="dark"] .employee-preview {
        background: var(--color-gray-700);
    }

    .preview-avatar {
        width: 60px;
        height: 60px;
        border-radius: var(--radius-full);
        object-fit: cover;
        border: 3px solid var(--color-white);
        box-shadow: var(--shadow-sm);
    }

    .preview-info {
        text-align: left;
        flex: 1;
    }

    .preview-name {
        font-weight: var(--font-semibold);
        color: var(--color-gray-800);
        margin-bottom: 0.25rem;
    }

    [data-theme="dark"] .preview-name {
        color: var(--color-gray-200);
    }

    .delete-warning {
        display: flex;
        align-items: flex-start;
        gap: var(--space-sm);
        padding: var(--space-md);
        background: rgba(239, 68, 68, 0.05);
        border: 1px solid rgba(239, 68, 68, 0.2);
        border-radius: var(--radius-lg);
        text-align: left;
    }

    .warning-text {
        font-size: var(--text-sm);
        color: var(--color-gray-700);
        line-height: 1.5;
    }

    [data-theme="dark"] .warning-text {
        color: var(--color-gray-300);
    }

    /* Empty State */
    .empty-state {
        padding: var(--space-3xl);
        text-align: center;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: var(--color-gray-400);
        margin-bottom: var(--space-lg);
    }

    .empty-state-title {
        font-weight: var(--font-semibold);
        color: var(--color-gray-600);
        margin-bottom: var(--space-sm);
    }

    .empty-state-description {
        color: var(--color-gray-500);
        margin-bottom: var(--space-lg);
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Animations */
    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }

    /* Responsive Design */
    @@media (max-width: 1200px) {
        .contact-info {
            min-width: 180px;
        }
    }

    @@media (max-width: 992px) {
        .table-responsive {
            font-size: var(--text-sm);
        }

        .employee-info {
            gap: var(--space-sm);
        }

        .employee-avatar {
            width: 40px;
            height: 40px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }

        .btn-action {
            width: 32px;
            height: 32px;
        }
    }

    @@media (max-width: 768px) {
        .table-header th {
            padding: var(--space-md);
            font-size: var(--text-xs);
        }

        .employee-row td {
            padding: var(--space-md);
        }

        .employee-meta {
            flex-direction: column;
            gap: 0.125rem;
        }

        .contact-info {
            min-width: 150px;
        }
    }

    @@media (max-width: 576px) {
        .table-container {
            border-radius: var(--radius-lg);
            margin: 0 -var(--space-md);
        }

        .employee-preview {
            flex-direction: column;
            text-align: center;
        }

        .preview-info {
            text-align: center;
        }
    }
</style>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

    // Clear search function
    function clearSearch() {
        const searchInput = document.querySelector('input[name="EmployeeSearchName"]');
        if (searchInput) {
            searchInput.value = '';
            searchInput.dispatchEvent(new Event('input'));
        }
    }

    // Row click handler (for potential future enhancements)
    document.querySelectorAll('.employee-row').forEach(row => {
        row.addEventListener('click', function(e) {
            // Don't trigger if clicking action buttons
            if (!e.target.closest('.action-buttons')) {
                const employeeId = this.getAttribute('data-employee-id');
                // Potential enhancement: quick view modal
                console.log('Employee clicked:', employeeId);
            }
        });
    });
</script>