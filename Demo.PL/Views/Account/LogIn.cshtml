@model LogInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<partial name="_ToastsPartialView"></partial>

<div class="auth-page container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="auth-card shadow-lg p-4 rounded-4 w-100" style="max-width: 420px;">
        <h2 class="text-center mb-4 fw-bold text-gradient">Welcome Back</h2>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

            <!-- Email -->
            <div class="mb-3 input-group">
                <span class="input-group-text bg-primary text-white">
                    <i class="bi bi-envelope"></i>
                </span>
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
            <span asp-validation-for="Email" class="text-danger small"></span>

            <!-- Password -->
            <div class="mb-3 input-group">
                <span class="input-group-text bg-primary text-white">
                    <i class="bi bi-lock"></i>
                </span>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger small"></span>

            <!-- Remember Me -->
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label small">Keep me signed in</label>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary w-100 fw-semibold py-2 rounded-pill">
                Sign In
            </button>
        </form>

        <div class="mt-4 text-center">
            <p class="text-dark small mb-1">
                Don’t have an account?
                <a asp-action="Register" class="text-decoration-none fw-bold text-accent">Register Now</a>
            </p>
            <p class="text-dark small">
                Forgot your password?
                <a asp-action="ForgetPassword" class="text-decoration-none fw-bold text-accent">Reset Here</a>
            </p>
        </div>

        <div class="divider my-3 position-relative text-center text-muted small">
            <span class="bg-white px-3">Or sign in with</span>
        </div>

        <div class="text-center mt-3 d-flex flex-column flex-sm-row justify-content-center gap-2">
            <a asp-action="GoogleLogin" class="btn btn-danger flex-fill">
                <i class="bi bi-google me-1"></i> Google
            </a>
            <a asp-action="FacebookLogin" class="btn btn-primary flex-fill">
                <i class="bi bi-facebook me-1"></i> Facebook
            </a>
        </div>
    </div>
</div>
